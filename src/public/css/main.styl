body
  height 100%

i
  padding 5px

  &.fa-google
    color #A00

  &.fa-facebook
    color #3b5998

a.sourcecode-link
  width 200px
  position fixed
  right -45px
  top 45px
  height 26px
  background-color #FFC107
  text-align center
  padding 4px
  transform rotate(45deg)
  color black
  font-weight bold
  text-decoration none
  z-index 100

.login-form
  height: 130px
  button
    width 115px

.main-content
  width 100%
  height 100%
  background-color #4d4d4d !important

.background-image
  background-image url("/img/background.jpg")
  background-size 100%
  background-repeat no-repeat
  background-color #4d4d4d !important

.avatar
  width: 50px;
  height: 50px;
  border-radius: 50%;

.username
  padding-left 10px