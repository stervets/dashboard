/*
  DASHBOARD
*/

.dashboard-menu
  .md-mini
    border-radius 2px

.dashboard-table
  max-width 1400px
  width: 100%
  height: 100%
  padding 10px
  &-body
    position: relative

.dashboard-widget
  position absolute
  user-select none
  user-drag none
  &.moving, &.moving-remove
    cursor move
    z-index 3

  .dashboard-widget-front, .dashboard-widget-back
    width: 100%
    height: 100%
    backface-visibility: hidden
    overflow: hidden
    position absolute
    background-color rgba(32, 36, 64, 0.5)

    &.ng-hide-add
      transform: perspective( 600px ) rotateX(0deg)
      transition: transform .5s  ease
      &-active
        transform: perspective( 600px ) rotateX(180deg)
    &.ng-hide-remove
      transform: perspective( 600px ) rotateX(-180deg)
      transition: transform .5s  ease
      &-active
        transform: perspective( 600px ) rotateX(0deg)
  .dashboard-widget-back
    background-color: #757575
    md-toolbar
      min-height 47px
      height 47px
      padding 12px

  .dashboard-widget-menu
    .md-mini
      width: 31px
      height: 30px
      line-height: 30px
      min-height: 30px
      margin 0px 5px
      position: relative
      left: 15px
      top: -10px
      padding: 0px 0px 0px 1px
      i
        font-size: 20px

  .dashboard-widget-resizer
    position absolute
    right: 0px
    bottom 0px
    cursor se-resize
    //text-shadow: 1px 1px 5px #333

.highchart-container
  width: 100%;
  height: 100%;


iconAfter()
  font-family: 'Material Icons'
  font-size 24px
  line-height 1px
  top: 10px
  position absolute

.value-widget
  &.name
    color: lightgrey
    text-align center
    padding 4px
    font-size 12px
    width: 55px

    &.up:after
      iconAfter()
      content: 'arrow_drop_up'
      color: greenyellow

    &.down:after
      iconAfter()
      content: 'arrow_drop_down'
      color: indianred

  &.data
    color: lightgrey
    text-align center
    font-size 24px
    padding-top 15px
    transition all .3s ease
    &.up
      color: greenyellow
    &.down
      color: indianred

