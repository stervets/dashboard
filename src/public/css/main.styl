  background-color #4d4d4d !important

.avatar
  width: 50px;
  height: 50px;
  border-radius: 50%;

.username
  padding-left 10px

/*
  DASHBOARD
*/

.dashboard-menu
  .md-mini
    border-radius 2px

.dashboard-table
  max-width 1400px
  width: 100%
  height: 100%
  padding 10px
  &-body
    position: relative

.dashboard-widget
  position absolute
  user-select none
  user-drag none
  &.moving, &.moving-remove
    z-index 3

  .dashboard-widget-front, .dashboard-widget-back
    width: 100%
    height: 100%
    backface-visibility: hidden
    overflow: hidden
    position absolute

    &.ng-hide-add
      transform: perspective( 600px ) rotateX(0deg)
      transition: transform .5s  ease
      &-active
        transform: perspective( 600px ) rotateX(180deg)
    &.ng-hide-remove
      transform: perspective( 600px ) rotateX(-180deg)
      transition: transform .5s  ease
      &-active
        transform: perspective( 600px ) rotateX(0deg)

  .dashboard-widget-back.flipped
      transform: perspective( 600px ) rotateX(180deg)

  .dashboard-widget-menu
    .md-mini
      width: 31px
      height: 30px
      line-height: 30px
      min-height: 30px
      margin 0px 5px
      position: relative
      left: 15px
      top: -10px
      padding: 0px 0px 0px 1px
      i
        font-size: 20px

  .dashboard-widget-resizer
    position absolute
    right: 0px
    bottom 0px
    cursor se-resize
    text-shadow: 1px 1px 5px #333